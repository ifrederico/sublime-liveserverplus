        // Web Font Formats
        ".woff", ".woff2", ".ttf", ".eot",

        // Media Formats
        ".mp4", ".webm", ".ogg", ".mp3", ".wav",

        // Document & Data Formats
        ".pdf", ".json", ".xml", ".map", ".md", ".txt"
    ],

    // ==========================================
    // Advanced File Watcher Settings
