// LiveServerPlus.sublime-settings
{
    // ==========================================
    // Basic Server Settings
    // ==========================================

    // Hostname/IP where the server runs.
    "host": "localhost",

    // Port number (0 selects a random available port).
    "port": 0,

    // Automatically opens the browser when server starts.
    "open_browser_on_start": true,

    // Specify the browser to open (leave empty for default).
    // Examples: "chrome", "firefox", "edge"
    "browser": "",

    // Enable or disable status bar notifications.
    "status_bar_enabled": true,

    // ==========================================
    // Live Reload Configuration
    // ==========================================

    "live_reload": {
